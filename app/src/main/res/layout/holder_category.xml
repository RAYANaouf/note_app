<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray1"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/categoryHolder_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/c6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/img_20percent_radius" />


        <TextView
            android:id="@+id/categoryHolder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="middle"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:textColor="@color/gray8"
            android:textSize="14dp"
            android:text="category's name"
            app:layout_constraintEnd_toStartOf="@+id/categoryHolder_amount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/categoryHolder_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryHolder_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="@color/gray6"
            android:maxLines="2"
            android:paddingStart="5dp"
            android:text="descreption of the categories of the notes"
            app:layout_constraintEnd_toStartOf="@+id/categoryHolder_amount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/categoryHolder_logo"
            app:layout_constraintTop_toBottomOf="@+id/categoryHolder_name" />

        <TextView
            android:id="@+id/categoryHolder_amount"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>